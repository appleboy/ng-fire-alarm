!!! 5
html(ng-app="demo")
  head
    meta(charset="utf-8")
    base(href="/")
    title angular-on-fire
    meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0")
    link(rel="stylesheet", href="//netdna.bootstrapcdn.com/bootstrap/2.3.2/css/bootstrap.min.css")
    link(rel="stylesheet", href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.min.css")
    link(rel="stylesheet", href="style.min.css")      
    script(type="text/javascript", src="https://ajax.googleapis.com/ajax/libs/angularjs/1.1.5/angular.min.js")
    script(type="text/javascript", src="//cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/0.6.0/ui-bootstrap-tpls.min.js")
    script(type="text/javascript", src="https://cdn.firebase.com/v0/firebase.js")
    script(src="script.js")
  body
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container-fluid
          button.btn.btn-navbar(type="button", ng-init="isCollapse = true", ng-click="isCollapse = !isCollapse")
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.brand(href="https://github.com/tomchentw/angular-on-fire") angular-on-fire
    a(href="https://github.com/tomchentw/angular-on-fire")
      img(style="position: absolute; z-index: 9999; top: 0; right: 0; border: 0;",
        src="https://s3.amazonaws.com/github/ribbons/forkme_right_orange_ff7600.png",
        alt="Fork me on GitHub")
    .container-fluid
      section
        .row-fluid
          .span8
            include mixins/hero-unit
          .span4
            tabset
              tab(heading="hero-unit.html")
                pre.prettyprint.linenums(ng-non-bindable)= renderMixin('mixins/hero-unit.jade')
              tab(heading="hero-unit.js")
                pre.prettyprint.linenums(ng-non-bindable)= renderMixin('mixins/hero-unit.ls')
      section
        .page-header
          h1 Easy Button Group
        .row-fluid
          .span8
            tabset
              tab(heading="btn-group.html")
                pre.prettyprint.linenums(ng-non-bindable)= renderMixin('mixins/btn-group.jade')
              tab(heading="btn-group.js")
                pre.prettyprint.linenums(ng-non-bindable)= renderMixin('mixins/btn-group.ls')
          .span4(ng-controller="ButtonGroupCtrl")
            include mixins/btn-group
      section
        .page-header
          h1 Easy Button Toolbar
        .row-fluid
          .span8
            tabset
              tab(heading="btn-toolbar.html")
                pre.prettyprint.linenums(ng-non-bindable)= renderMixin('mixins/btn-toolbar.jade')
              tab(heading="btn-toolbar.js")
                pre.prettyprint.linenums(ng-non-bindable)= renderMixin('mixins/btn-toolbar.ls')
          .span4(ng-controller="ButtonToolbarCtrl")
            include mixins/btn-toolbar
      section(ng-controller="DelayEvalCtrl")
        .page-header
          h1 With Delayed Evaluation at Path('/{{ path }}/state')
        .row-fluid
          .span8
            tabset
              tab(heading="delay-eval.html")
                pre.prettyprint.linenums(ng-non-bindable)= renderMixin('mixins/delay-eval.jade')
              tab(heading="delay-eval.js")
                pre.prettyprint.linenums(ng-non-bindable)= renderMixin('mixins/delay-eval.ls')
          .span4
            include mixins/delay-eval
      section
        .page-header
          h1 No-More $scope Exposed!
        .row-fluid
          .span8
            tabset
              tab(heading="fb-sync.html")
                pre.prettyprint.linenums(ng-non-bindable)= renderMixin('mixins/fb-sync.jade')
              tab(heading="fb-sync.js")
                pre.prettyprint.linenums(ng-non-bindable)= renderMixin('mixins/fb-sync.ls')
          .span4(ng-controller="FbSyncCtrl")
            include mixins/fb-sync
