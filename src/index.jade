html(ng-app="demo")
  head
    meta(charset="utf-8")
    base(href="/")
    title angular-on-fire
    meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0")
    link(rel="stylesheet", href="//netdna.bootstrapcdn.com/bootstrap/2.3.2/css/bootstrap.min.css")
    link(rel="stylesheet", href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.min.css")
    script(type="text/javascript", src="https://ajax.googleapis.com/ajax/libs/angularjs/1.1.5/angular.min.js")
    script(type="text/javascript", src="https://cdn.firebase.com/v0/firebase.js")
    script(src="/script.js")
  body
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container-fluid
          button.btn.btn-navbar(type="button", ng-init="isCollapse = true", ng-click="isCollapse = !isCollapse")
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.brand(ui-sref="Home") angular-on-fire
    .container-fluid
      section.hero-unit(ng-controller="HeroCtrl")
        h1 Hello, angular-on-fire!!
        p angularjs, binding, firebase
        p
          | The greatest way to use Firebase with AngularJS!
        a.btn.btn-primary.btn-large(href="", ng-click="counter.$increase()")
          | Click to Increase Counter : {{ counter.$value }}
      section(ng-controller="ButtonGroupCtrl")
        .row-fluid
          h1 Easy Button Group
        .row-fluid
          .btn-group
            button.btn(ng-class="{active: states.left}",
              ng-click="states.$update({left: !states.left})") Left
            button.btn(ng-class="{active: states.middle}",
              ng-click="states.$update({middle: !states.middle})") Middle
            button.btn(ng-class="{active: states.right}",
              ng-click="states.$update({right: !states.right})") Right
          .code
            {{states}}
      section(ng-controller="ButtonToolbarCtrl")
        .row-fluid
          h1 Easy Button Toolbar
        .row-fluid
          .btn-toolbar
            .btn-group
              button.btn(ng-repeat="state in states track by state.$name",
                ng-class="{active: state.$value}", 
                ng-click="state.$set(!state.$value)") 
                | {{ state.$name }}
            .code
              {{states}}
      section(ng-controller="DelayEvalCtrl")
        .row-fluid
          h1 With Delayed Evaluation at '/{{ path }}/state'
        .row-fluid
          button.btn(ng-class="{active: state.$value}", 
            ng-click="state.$set(!state.$value)")
            | Click Me After Resolved 
          .code
            {{state}}


