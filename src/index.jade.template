            .span6
              tabset
                tab(heading="8.html")
                  pre.prettyprint.linenums(ng-non-bindable)
                    != '<%= file.read("dest/mixins/8.html").replace(/[&<>"\'/\n]/g, function(s){ return entityMap[s]; }) %>'
                tab(heading="8.js")
                  pre.prettyprint.linenums(ng-non-bindable)
                    != "<%= file.read('dest/mixins/8.js').replace(/\n/g, '\\n') %>"
            .span6
              h2 
                | See 'navbar'
              h2
                small Click 'Facebook Login' for demo!
