                tab(heading="4.js")
                  pre.prettyprint.linenums(ng-non-bindable)
                    != "<%= file.read('dest/mixins/4.js').replace(/\n/g, '\\n') %>"
            .span6
              include mixins/4
      section
        .container-fluid
          .page-header
            h1
              pre.demo FireCollection
              | service
          .row-fluid
            .span6
              tabset
                tab(heading="5.html")
                  pre.prettyprint.linenums(ng-non-bindable)
